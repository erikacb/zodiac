<p id="notice"><%= notice %></p>

<div class="page-header">
  <h1>Sentences</h1>
</div>

<div class="save-footer">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Content
      </th>
      <th>Category</th>
      <th>Language</th>
      <th>&nbsp;<%= link_to '<i class="fa fa-plus" aria-hidden="true"></i>'.html_safe, new_sentence_path %></th>
    </tr>
  </thead>

  <tbody>
    <% @sentences.each do |sentence| %>
      <tr>
        <td><%= sentence.content %></td>
        <td><%= show_category_name(sentence.category) %></td>
        <td><%= show_language_name(sentence.language) %></td>
        <!-- <td><%= link_to 'Show', sentence %></td> -->
        <td><%= link_to '<i class="fa fa-pencil" aria-hidden="true"></i>'.html_safe, edit_sentence_path(sentence) %> <%= link_to '<i class="fa fa-trash" aria-hidden="true"></i>'.html_safe, sentence, method: :delete, data: { confirm: 'Are you sure you want to delete this sentence?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '<button type="button" class="btn btn-warning">Home</button>'.html_safe, root_path %>
</div>


